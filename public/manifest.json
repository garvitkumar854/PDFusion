{
  "theme_color": "#5e4dff",
  "background_color": "#040B1D",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "PDFusion",
  "short_name": "PDFusion",
  "description": "Merge, split, compress, convert, and manage your PDF files with ease. Our tools run securely in your browser to protect your privacy. No uploads required.",
  "orientation": "any",
  "dir": "auto",
  "lang": "en-US",
  "display_override": [
    "window-controls-overlay"
  ],
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "icons": [
    {
      "src": "/96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/maskable_icon_x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Merge PDFs",
      "short_name": "Merge",
      "description": "Combine multiple PDFs into one file",
      "url": "/merger",
      "icons": [{ "src": "/icons/shortcut-merge.png", "sizes": "192x192" }]
    },
    {
      "name": "Split PDF",
      "short_name": "Split",
      "description": "Extract pages from a PDF",
      "url": "/split-pdf",
      "icons": [{ "src": "/icons/shortcut-split.png", "sizes": "192x192" }]
    },
    {
      "name": "Compress PDF",
      "short_name": "Compress",
      "description": "Reduce the file size of a PDF",
      "url": "/compress-pdf",
      "icons": [{ "src": "/icons/shortcut-compress.png", "sizes": "192x192" }]
    }
  ]
}
