{
  "theme_color": "#5e4dff",
  "background_color": "#040B1D",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "PDFusion: Your All-in-One PDF Toolkit",
  "short_name": "PDFusion",
  "description": "Merge, split, compress, convert, and manage your PDF files with ease. Our tools run securely in your browser to protect your privacy. No uploads required.",
  "lang": "en-US",
  "dir": "ltr",
  "id": "/",
  "categories": [
    "productivity",
    "utilities"
  ],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "note_taking": {
    "new_note_url": "/text-summarizer",
    "needs_account": false
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "share_target": {
    "action": "/merger",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "files",
          "accept": [
            "application/pdf"
          ]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Merge PDF Files",
      "short_name": "Merge",
      "description": "Combine multiple PDFs into one document",
      "url": "/merger",
      "icons": [
        {
          "src": "/icons/merge.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Split a PDF",
      "short_name": "Split",
      "description": "Extract pages from a PDF file",
      "url": "/split-pdf",
      "icons": [
        {
          "src": "/icons/split.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Course Pilot",
      "short_name": "Course Pilot",
      "description": "Track your course assignments and deadlines",
      "url": "/assignment-tracker",
      "icons": [
        {
          "src": "/icons/coursepilot.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Explore More Tools",
      "short_name": "More Tools",
      "description": "Discover other useful utilities",
      "url": "/more-tools",
      "icons": [
        {
          "src": "/192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
