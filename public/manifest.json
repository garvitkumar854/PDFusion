{
  "name": "PDFusion: Your All-in-One PDF Toolkit",
  "short_name": "PDFusion",
  "description": "Merge, split, compress, convert, and manage your PDF files with ease. Our tools run securely in your browser to protect your privacy. No uploads required.",
  "id": "/",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["standalone"],
  "orientation": "any",
  "background_color": "#040B1D",
  "theme_color": "#5e4dff",
  "lang": "en-US",
  "dir": "ltr",
  "iarc_rating_id": "e5c8f4d0-c8f3-4411-a320-f5f848b5d194",
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "icons": [
    {
      "src": "/72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/maskable_icon_x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Merge PDFs",
      "short_name": "Merge",
      "description": "Combine multiple PDF files into one.",
      "url": "/merger",
      "icons": [{ "src": "/icons/combine.svg", "sizes": "96x96" }]
    },
    {
      "name": "Split PDF",
      "short_name": "Split",
      "description": "Extract pages from a PDF.",
      "url": "/split-pdf",
      "icons": [{ "src": "/icons/split.svg", "sizes": "96x96" }]
    },
    {
      "name": "Compress PDF",
      "short_name": "Compress",
      "description": "Reduce the file size of your PDF.",
      "url": "/compress-pdf",
      "icons": [{ "src": "/icons/compress.svg", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "PDFusion Homepage"
    },
    {
      "src": "/screenshots/screenshot-mobile.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "PDFusion on Mobile"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "files",
          "accept": ["application/pdf", "image/jpeg", "image/png"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+pdf",
      "url": "/?url=%s"
    }
  ]
}
