
{
    "name": "PDFusion",
    "short_name": "PDFusion",
    "description": "Merge, split, compress, convert, and manage your PDF files with ease. Our tools run securely in your browser to protect your privacy. No uploads required.",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#040B1D",
    "theme_color": "#5e4dff",
    "orientation": "portrait-primary",
    "lang": "en-US",
    "dir": "ltr",
    "scope": "/",
    "categories": [
        "productivity",
        "utilities",
        "business"
    ],
    "prefer_related_applications": false,
    "display_override": [
        "window-controls-overlay"
    ],
    "file_handlers": [
        {
            "action": "/merger",
            "accept": {
                "application/pdf": [
                    ".pdf"
                ]
            },
            "icons": [
                {
                    "src": "/192x192.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ],
            "launch_type": "single-client"
        }
    ],
    "shortcuts": [
        {
            "name": "Merge PDF",
            "short_name": "Merge",
            "description": "Combine multiple PDF files into one.",
            "url": "/merger",
            "icons": [
                {
                    "src": "/icons/merge.svg",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Split PDF",
            "short_name": "Split",
            "description": "Extract pages from a PDF file.",
            "url": "/split-pdf",
            "icons": [
                {
                    "src": "/icons/split.svg",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Course Pilot",
            "short_name": "Course Pilot",
            "description": "Track your course assignments and deadlines.",
            "url": "/assignment-tracker",
            "icons": [
                {
                    "src": "/icons/coursepilot.svg",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "More Tools",
            "short_name": "More Tools",
            "description": "Explore all available tools and utilities.",
            "url": "/more-tools",
            "icons": [
                {
                    "src": "/192x192.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
